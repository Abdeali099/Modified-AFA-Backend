<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" id="WebApp_ID" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <display-name>Archetype Created Web Application</display-name>

  <servlet>
      <servlet-name>Servlet_Signup</servlet-name>
      <servlet-class>com.afa.authorization.signup.AFASignup</servlet-class>
  </servlet>

  <servlet-mapping>
      <servlet-name>Servlet_Signup</servlet-name>
      <url-pattern>/api/auth/signup</url-pattern>
  </servlet-mapping>

  <filter>
      <filter-name>Filter_Signup</filter-name>
      <filter-class>com.afa.authorization.signup.FilterSignup</filter-class>
  </filter>

  <filter-mapping>
      <filter-name>Filter_Signup</filter-name>
      <url-pattern>/api/auth/signup</url-pattern>
  </filter-mapping>

  <servlet>
      <servlet-name>OTP_Send</servlet-name>
      <servlet-class>com.afa.authorization.otphandle.OTPSender</servlet-class>
  </servlet>

  <servlet-mapping>
      <servlet-name>OTP_Send</servlet-name>
      <url-pattern>/api/auth/sendOTP</url-pattern>
  </servlet-mapping>

</web-app>